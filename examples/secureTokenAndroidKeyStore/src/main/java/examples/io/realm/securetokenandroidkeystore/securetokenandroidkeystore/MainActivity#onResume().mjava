    @Override
    protected void onResume() {
        super.onResume();
        try {
            // We return to the app after the KeyStore is unlocked or not.
            if (cryptoClient.isKeystoreUnlocked()) {
                buildSyncConf();
                keystoreUnlockedMessage ();
            } else {
                keystoreLockedMessage ();
            }
        } catch (KeyStoreException e) {
            e.printStackTrace();
        }
    }

