    public void createItem(View v) {

        Realm wrRealm = null;
        try {
            wrRealm = new Realm(this.getFilesDir());
        } catch (IOException e) {
            e.printStackTrace();
        }
        wrRealm.beginWrite();

        User user = new User();

        user.setId(0);
        user.setName("Username " + this.users.size());
        user.setEmail("");

        wrRealm.add(user);
        wrRealm.commit();


    }

