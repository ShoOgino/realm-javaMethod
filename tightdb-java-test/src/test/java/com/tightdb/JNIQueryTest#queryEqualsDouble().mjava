    @Test
    public void queryEqualsDouble() {

        Table table = new Table();
        TableSpec tableSpec = new TableSpec();
        tableSpec.addColumn(ColumnType.DOUBLE, "number");
        tableSpec.addColumn(ColumnType.STRING, "name");
        table.updateFromSpec(tableSpec);

        table.add(10.1, "A");
        table.add(11.2, "B");
        table.add(12.3, "C");
        table.add(13.4, "B");
        table.add(14.5, "D");
        table.add(16.6, "D");


        TableQuery query = table.where();

        long cnt = query.equal(1, "D").count();
        assertEquals(2, cnt);

        double min = query.minimumDouble(0);
        assertEquals(14.5, min);

        double max = query.maximumDouble(0);
        assertEquals(16.6, max);

        double sum = query.sumDouble(0);
        assertEquals(14.5+16.6, sum);

        double avg = query.averageDouble(0);
        assertEquals(15.55, avg);

    }

