    @Test
    public void queryEqualsFloat() {

        Table table = new Table();
        TableSpec tableSpec = new TableSpec();
        tableSpec.addColumn(ColumnType.FLOAT, "number");
        tableSpec.addColumn(ColumnType.STRING, "name");
        table.updateFromSpec(tableSpec);

        table.add(10.1F, "A");
        table.add(11.2F, "B");
        table.add(12.3F, "C");
        table.add(13.4F, "B");
        table.add(14.5F, "D");
        table.add(16.6F, "D");


        TableQuery query = table.where();

        long cnt = query.equal(1, "D").count();
        assertEquals(2, cnt);

        // Calculate the minimum of the first column in the query
        float min = query.minimumFloat(0);
        assertEquals(14.5F, min);

        // Calculate the maximum of the first column in the query
        float max = query.maximumFloat(0);
        assertEquals(16.6F, max);

        // Calculate the sum of the first column in the query
        double sum = query.sumFloat(0);
        assertEquals(14.5F + 16.6F, sum);

        // Calculate the average of the first column in the query
        double avg = query.averageFloat(0);
        assertEquals(15.55F, avg);

    }

