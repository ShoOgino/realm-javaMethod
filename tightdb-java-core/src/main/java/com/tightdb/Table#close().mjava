    public void close() {
        synchronized (CloseMutex.getInstance()) {
            if (DEBUG) System.err.println("==== CLOSE " + tableNo + " ptr= " + nativePtr + " remaining " + TableCount);
            if (nativePtr == 0)
                return;
            if (DEBUG) TableCount--;
            nativeClose(nativePtr);
            nativePtr = 0;
        }
    }

