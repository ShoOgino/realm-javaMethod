    public Group(ByteBuffer buffer) {
        context = new Context();
        if (buffer != null) {
            this.nativePtr = createNative(buffer);
            try { 
                checkNativePtr();
            } catch (RuntimeException e) {
                nativeClose(nativePtr);
                throw e;
            }
        } else {
            throw new IllegalArgumentException();
        }
    }

