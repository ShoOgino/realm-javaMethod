    @After
    public void teardownTest() {
        if (looperThread.isTestComplete()) {
            // Non-looper tests can reset here
            resetTestEnvironment();
        } else {
            // Otherwise we need to wait for the test to complete
            looperThread.runAfterTest(new Runnable() {
                @Override
                public void run() {
                    resetTestEnvironment();
                }
            });
        }
    }

