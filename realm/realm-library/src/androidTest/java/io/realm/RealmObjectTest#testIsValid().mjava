    public void testIsValid() {
        testRealm.beginTransaction();
        Dog dog = testRealm.createObject(Dog.class);
        dog.setName("Fido");
        testRealm.commitTransaction();

        assertTrue(dog.isValid());

        testRealm.beginTransaction();
        dog.removeFromRealm();
        testRealm.commitTransaction();

        assertFalse(dog.isValid());
    }

