    private RealmQuery(BaseRealm realm, LinkView linkView, Class<E> clazz) {
        this.realm = realm;
        this.clazz = clazz;
        this.schema = realm.schema.getSchemaForClass(clazz);
        this.table = schema.table;
        this.linkView = linkView;
        this.query = linkView.where();
    }

