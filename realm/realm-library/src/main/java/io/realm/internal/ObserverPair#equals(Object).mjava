    @Override
    public boolean equals(Object obj) {
        if (this == obj) {
            return true;
        }

        if (obj instanceof ObserverPair) {
            ObserverPair anotherPair = (ObserverPair) obj;
            return listener.equals(anotherPair.listener) &&
                    observerRef.get() == anotherPair.observerRef.get();
        }
        return false;
    }

