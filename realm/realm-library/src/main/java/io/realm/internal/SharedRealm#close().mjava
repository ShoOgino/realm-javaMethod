    @Override
    public void close() {
        if (realmNotifier != null) {
            realmNotifier.close();
        }
        synchronized (context) {
            if (nativePtr != 0) {
                nativeCloseSharedRealm(nativePtr);
                // It is OK to clear the nativePtr. It has been saved to the NativeObjectReference when adding to the
                // context.
                nativePtr = 0;
            }
        }
    }

